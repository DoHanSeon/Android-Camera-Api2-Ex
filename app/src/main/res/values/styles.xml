<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Snow.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">0.40</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:windowAnimationStyle">@style/FadeDialogAnimation_200</item>
    </style>

    <style name="FadeDialogAnimation_200">
        <item name="android:windowEnterAnimation">@anim/fade_in_200</item>
        <item name="android:windowExitAnimation">@anim/fade_out_200</item>
    </style>

</resources>
